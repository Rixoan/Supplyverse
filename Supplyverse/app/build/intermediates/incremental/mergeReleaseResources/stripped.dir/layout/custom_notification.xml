<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageview_notification"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:paddingStart="20dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_baseline_local_mall_24" />

    <TextView
        android:id="@+id/tv_notification_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:text="Notification Title"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:layout_toEndOf="@id/imageview_notification"/>
    <TextView
        android:id="@+id/tv_notification_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:text="Notification Description"
        android:textSize="14sp"
        android:layout_toEndOf="@id/imageview_notification"
        android:layout_below="@id/tv_notification_title"/>


</RelativeLayout>